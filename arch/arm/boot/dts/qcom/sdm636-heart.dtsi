#include "sdm636-moto-common.dtsi"
#include "dsi-panel-mot-lg-550-1080p-vid.dtsi"

#include "dsi-panel-mot-tianma-520-1080p-vid.dtsi"
#include "dsi-panel-mot-boe-520-1080p-vid.dtsi"

/ {
	model = "heart";
	compatible = "qcom,sdm636-heart", "qcom,sdm636-moto", "qcom,sdm636";
};

&firmware {
	android {
		fstab {
			vendor {
				fsmgr_flags = "wait,slotselect,verify";
			};
		};
	};
};

&soc{
	qcom,tz_gpio {
		compatible = "qcom,tz_gpio";
		tlmm-tz = <0>,
			<1>,
			<2>,
			<3>;
	};

	ssphy: ssphy@c010000 {
		status = "disabled";
	};

	usb_nop_phy: usb_nop_phy {
		compatible = "usb-nop-xceiv";
	};
};

&usb3 {
	dwc3@a800000 {
		usb-phy = <&qusb_phy0>, <&usb_nop_phy>;
		maximum-speed = "high-speed";
	};
};

&mdss_mdp {
	qcom,mdss-pref-prim-intf = "dsi";
};

&mdss_dsi {
	hw-config = "single_dsi";
};

&mdss_dsi0 {
	qcom,dsi-pref-prim-pan = <&mot_lg_550_1080p_vid_v0>;
	pinctrl-names = "mdss_default", "mdss_sleep";
	pinctrl-0 = <&mdss_dsi_active &mdss_te_active>;
	pinctrl-1 = <&mdss_dsi_suspend &mdss_te_suspend>;
	qcom,platform-reset-gpio = <&tlmm 53 0>;
	qcom,platform-te-gpio = <&tlmm 59 0>;
};

&pm660l_wled {
	qcom,led-strings-list = [00 01];
	qcom,en-cabc;
	/delete-property/ qcom,auto-calibration-enable;
};

&mdss_dp_ctrl{
		status = "disabled";
};

&i2c_3 {
	sw49106@28 {
#include <dt-bindings/gpio/gpio.h>
		compatible = "siw,sw49106";
		reg = <0x28>;
		interrupt-parent = <&tlmm>;
		interrupts = <67 0x02>;
		irqflags = <0x2002>;

		chip_flags = <0x1000>;

		reset-gpio = <&tlmm 66 GPIO_ACTIVE_LOW>;
		irq-gpio = <&tlmm 67 GPIO_ACTIVE_LOW>;

		max_x = <1080>;
		max_y = <2160>;
		max_presure = <0xff>;
		max_width = <15>;
		max_orientation = <1>;
		max_id = <10>;

		hw_reset_delay = <210>;
		sw_reset_delay = <90>;
		use_lpwg = <1>;
		use_lpwg_test = <1>;

		use_firmware = <0>;
		use_fw_upgrade = <1>;
	};
};

